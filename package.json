{
  "name": "radonis-monorepo",
  "version": "1.3.21",
  "private": true,
  "description": "Monorepo containing all Radonis packages",
  "packageManager": "pnpm@7.0.0",
  "workspaces": [
    "packages/*",
    "example/"
  ],
  "scripts": {
    "build": "turbo run build --filter=./packages/*",
    "lint": "turbo run lint --filter=./packages/*",
    "format": "turbo run format --filter=./packages/*",
    "test": "turbo run test --filter=./packages/*",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/microeinhundert/radonis.git"
  },
  "bugs": {
    "url": "https://github.com/microeinhundert/radonis/issues"
  },
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0",
    "yarn": ">= 2.0.0",
    "pnpm": ">= 7.0.0"
  },
  "keywords": [
    "adonisjs",
    "radonis"
  ],
  "author": "Leon Seipp <l.seipp@microeinhundert.com>",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/sink": "^5.3.2",
    "@adonisjs/application": "^5.2.5",
    "@adonisjs/require-ts": "^2.0.12",
    "@japa/assert": "^1.3.4",
    "@japa/run-failed-tests": "^1.0.7",
    "@japa/runner": "^2.0.8",
    "@japa/spec-reporter": "^1.1.12",
    "adonis-preset-ts": "^2.1.0",
    "copyfiles": "2.4.1",
    "del-cli": "4.0.1",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-adonis": "2.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "openapi-types": "^11.0.1",
    "prettier": "2.6.2",
    "turbo": "^1.2.15",
    "typescript": "4.7.2"
  },
  "dependencies": {
    "@adonisjs/core": "^5.8.3",
    "@adonisjs/i18n": "^1.5.6",
    "@adonisjs/session": "^6.4.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["react", "react-dom"],
      "allowedVersions": {
        "react": "^18.1.0",
        "react-dom": "^18.1.0"
      }
    }
  }
}
