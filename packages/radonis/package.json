{
  "name": "@microeinhundert/radonis",
  "version": "2.0.0",
  "description": "Bridge the gap between React and AdonisJS",
  "type": "commonjs",
  "main": "./build/cjs/src/index.js",
  "types": "./build/cjs/src/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./build/esm/src/index.d.ts",
        "default": "./build/esm/src/index.js"
      },
      "require": {
        "types": "./build/cjs/src/index.d.ts",
        "default": "./build/cjs/src/index.js"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "build/cjs",
    "build/esm"
  ],
  "scripts": {
    "clean": "del-cli build",
    "build:cjs": "tsc --outDir ./build/cjs --module commonjs",
    "build:esm": "tsc --outDir ./build/esm --module esnext",
    "build": "\"$npm_execpath\" run build:cjs && \"$npm_execpath\" run build:esm",
    "lint": "TIMING=1 eslint . --ext=.ts",
    "format": "prettier --write .",
    "test": "node -r @adonisjs/require-ts/build/register bin/test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/microeinhundert/radonis.git",
    "directory": "packages/radonis"
  },
  "bugs": {
    "url": "https://github.com/microeinhundert/radonis/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0",
    "pnpm": ">= 7.0.0"
  },
  "keywords": [
    "adonisjs",
    "adonis",
    "radonis"
  ],
  "author": "Leon Seipp <l.seipp@microeinhundert.com>",
  "license": "MIT",
  "peerDependencies": {
    "@microeinhundert/radonis-server": "2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.0"
  },
  "dependencies": {
    "@microeinhundert/radonis-types": "workspace:2.0.0",
    "@microeinhundert/radonis-shared": "workspace:2.0.0",
    "@microeinhundert/radonis-server": "workspace:2.0.0",
    "@microeinhundert/radonis-hydrate": "workspace:2.0.0",
    "@microeinhundert/radonis-hooks": "workspace:2.0.0",
    "@microeinhundert/radonis-form": "workspace:2.0.0",
    "tslib": "^2.4.0"
  }
}
